  "postActions": [
    {
      "description": "Add projects to solution",
      "manualInstructions": [
        {
          "text": "Add generated project to solution manually."
        }
      ],
      "args": {
        // "inRoot": true,
        "solutionFolder": "Modules"
      },
      "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
      "continueOnError": true
